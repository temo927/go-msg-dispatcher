# --- Application ---
PORT=8080
BATCH_SIZE=2
TICK_INTERVAL=2m
MAX_MESSAGE_CHARS=1000
MAX_RETRIES=5

# --- Provider / Webhook ---
# Replace <your-webhook-id> with your own UUID from https://webhook.site
WEBHOOK_URL=https://webhook.site/<your-webhook-id>
WEBHOOK_AUTH_HEADER=x-ins-auth-key
WEBHOOK_AUTH_VALUE=<your-webhook-key>
ACCEPT_ANY_2XX=false

# --- PostgreSQL ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=msgsvc
DB_DSN=postgres://postgres:postgres@postgres:5432/msgsvc?sslmode=disable

# --- Redis ---
REDIS_ADDR=redis:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SENT_META_TTL=604800  # 7 days

# --- Build meta ---
VERSION=dev
